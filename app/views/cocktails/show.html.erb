<h1><%= @cocktail.name %></h1>

<%= link_to "Back to list", cocktails_path %>

<%= simple_form_for [@cocktail, @dose] do |d| %>
  <%= d.input :description %>
  <%= d.association :ingredient %>
  <%= d.button :submit %>
<% end %>

<% @cocktail.doses.each do |dose| %>
    <span><%= dose.ingredient.name %></span>
    <%= dose.description %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
    <% end %>
<% end %>



